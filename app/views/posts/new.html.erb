<h1>New</h1>
<%= form_for @post do |f| %>
<% if @post.errors.any?%>
<h2> ERROR: </h2>
<ul>
  <%@post.errors.full_messages.each do |message|%>
  <li> <%=message%> </li>
  <%end%>
</ul>
<%end%>

<p>
  <%= f.label :title %> <br>
  <%= f.text_field :title %> 
</p>
<p>
  <%= f.label :content %> <br>
  <%= f.text_area :content %> 
</p>
    <%= f.submit "Add a new Post" %> 

<%end%>