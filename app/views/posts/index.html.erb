<h1>Our Blog</h1>

<%  @posts.each do |post| %>
<h2>
<%=link_to post.title, post%><br>
<%=post.content%>
<p> <%=link_to "Edit", edit_post_path(post)%> </p>
<p> <%=link_to "Delete", post, :confirm => "Are You Sure?", :method => :delete %> </p>
</h2><hr>
<%end%>

